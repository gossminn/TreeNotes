<Page
    x:Class="TreeNotes.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TreeNotes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="20">
            <ScrollViewer MaxHeight="50" VerticalScrollBarVisibility="Visible">
                <TextBlock Name="PathBlock"  FontWeight="Bold" TextWrapping="Wrap">PATH GOES HERE</TextBlock>
            </ScrollViewer>
            <ScrollViewer MaxHeight="50" VerticalScrollBarVisibility="Visible">
                <TextBlock Name="ChildBlock" TextWrapping="Wrap"></TextBlock>
            </ScrollViewer>
            <TextBox Name="TitleBox"  PlaceholderText="Enter a title ..."></TextBox>
            <TextBox Name="EditorBox" PlaceholderText="Type your notes ..." AcceptsReturn="True" Height="250" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            <TextBox Name="CommandBox" PlaceholderText="Type a command ..."></TextBox>
        </StackPanel>
    </Grid>
</Page>
